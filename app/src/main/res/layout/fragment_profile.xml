<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/nameSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fork Buddy"
            android:textAlignment="center"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:textSize="22sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@forkbuddy"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />

        <LinearLayout
            android:id="@+id/userStatsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgForkbuddies"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_forkbuddy_icon"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/txtForkbuddies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/imgUpforks"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_upfork"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/txtUpforks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/imgDownforks"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_downfork"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/txtDownforks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_description"
            android:textSize="16dp"
            android:textColor="@color/colorOrange"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEditInfo"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:drawableStart="@drawable/ic_edit"
                android:padding="8dp"
                android:text="Edit Your Info"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textAlignment="center"
                android:background="@drawable/buttongradient"
                android:gravity="left|center_vertical" />



            <Button
                android:id="@+id/btnSettings"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:drawableStart="@drawable/ic_settings"
                android:padding="8dp"
                android:text="Settings"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textAlignment="center"
                android:background="@drawable/buttongradient"
                android:gravity="left|center_vertical" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>